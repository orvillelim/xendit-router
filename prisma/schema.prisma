generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Merchant {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
}

model PaymentTransaction {
  id              String   @id @default(cuid())
  business_id     String
  mid_id          String
  status          String
  payment_request Json
  created_at      DateTime @default(now())

  @@index([business_id])
  @@index([mid_id])
  @@index([status])
  @@index([created_at])
}

